#include<stdio.h>
int main()
{

    int a[10];
    int i, even=0,odd=0;
    printf("enter some numbers to check if it is  even or odd");
    for(i=0; i<10; i++)
    {

        scanf("%d", &a[i]);
    }

    for(i=0; i<10; i++)

    {
        printf("the element of array %d is %d\n", i, a[i]);
        if(a[i]%2==0)
        {

           even++;
        }
        if(a[i]%2!=0)


        {
           odd++;
        }
    }
    printf("the total number of even elements are %d\n",even);

    printf("the total number of odd elements are %d\n", odd);

}
